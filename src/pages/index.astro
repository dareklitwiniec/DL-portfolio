---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    
    <div class="text-2xl font-medium">Dariusz Litwiniec</div>
    <div class="text-1xl py-3 font-thin">Graphic Designer & Front-end Developer</div>
    <div class="py-2">
      <text class="text-lg">
        Graduate of the <b>Academy of Fine Arts</b> in Warsaw, Faculty of Graphics, specializing in graphic design, additional specialties: book illustration, photography. Creating visual identification of companies. Participation in advertising campaign projects. Design of packaging, labels, folders, preparation for printing. Product photographer for e-commerce. Website design, programming. 
      </text>
    </div>
  </div>

  <div>
    <div class="text-2xl w-full font-medium mb-2">Latest projects</div>
  </div>

  <HorizontalCard
    title="DLDESIGN company website "
    img="/dldesign.JPG"
    desc="Website design created for the company where I am currently employed. Our design studio offers design and programming, graphic design, and e-commerce online store support. Creating visual identification of enterprises and institutions as well as product photography."
    url="https://dldesign.vercel.app/"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Illustrations"
    img="/Barbara.jpg"
    desc="A website design presenting the works of the respected illustrator Barbara Litwiniec, whose illustrations enrich the content of many books published around the world."
    url="https://galeria-9spm.vercel.app/"
  />
  <div class="divider my-0 "></div>
  <HorizontalCard 
    title="Design of a series of advertising posters for a bank"
    img="/pko_02.jpg"
    desc="A series of advertising posters made as part of a competition for the design of a comprehensive advertising campaign, the main goal of which was to reach an individual consumer with a loan offer."
    url="https://dldesign.vercel.app/pko"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Presentation of book cover designs"
    img="/social1.jpg"
    desc="Presentation of book cover designs in the form of a website, created using the Next.js platform."
    url="https://cover-designs-seven.vercel.app/"
    badge="FOSS"
  />

  

  
</BaseLayout>
